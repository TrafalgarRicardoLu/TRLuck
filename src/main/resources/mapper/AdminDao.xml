<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.adminDao">
    <resultMap id="AdminResultMap" type="entity.Admin">
        <id property="aid" column="aid"/>
        <result property="aname" column="aname"/>
        <result property="password" column="password"/>
        <result property="authority" column="authority"/>
    </resultMap>

    <insert id="insertAdmin" useGeneratedKeys="true" keyProperty="aid">
            INSERT
            INTO
                admin (aname,password)
            VALUES (#{aname},#{password})
    </insert>

    <select id="selectAdminByName" parameterType="String" resultMap="AdminResultMap">
            SELECT
                *
            FROM
                admin
            WHERE
                aname = #{aname}
    </select>

    <update id="updatePasswordById">
            UPDATE
                admin
            SET
                password = #{password}
            WHERE
                aid = #{aid}
    </update>

    <update id="updateAuthorityById">
            UPDATE
                admin
            SET
                authority = #{authority}
            WHERE
                aid = #{aid}
    </update>

    <delete id="deleteAdminById" parameterType="Long">
        DELETE
        FROM
              admin
        WHERE
              aid = #{aid}
    </delete>
</mapper>