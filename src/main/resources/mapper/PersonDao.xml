<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.personDao">
    <resultMap id="PersonResultMap" type="entity.Person">
        <id property="pid" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
    </resultMap>
    <select id="selectAllPerson" resultMap="PersonResultMap">
        SELECT
              *
        FROM
              Person

    </select>

    <select id="selectPersonById"  resultMap="PersonResultMap" parameterType="Long">
            SELECT
                *
            FROM
                Person
            WHERE
                id = #{id}
    </select>

    <insert id="insertNewPerson">
            INSERT
            INTO Person (id,name,age,sex)
            VALUES (#{id},#{name},#{age},#{sex})
    </insert>

    <update id="updatePersonAge">
            UPDATE
                Person
            SET
                age = #{age}
            WHERE
                id = #{id}
    </update>

    <delete id="deletePersonById" parameterType="Long">
        DELETE
        FROM
              Person
        WHERE
              id = #{id}
    </delete>
</mapper>