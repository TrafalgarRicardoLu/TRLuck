<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.adminDao">
    <resultMap id="AdminResultMap" type="entity.Admin">
        <id property="aid" column="aid"/>
        <result property="aname" column="aname"/>
        <result property="password" column="password"/>
        <result property="authority" column="authority"/>
    </resultMap>

    <insert id="insertAdmin" useGeneratedKeys="true" keyProperty="aid">
            INSERT
            INTO
                Admin (aname,password)
            VALUES (#{aname},#{password});
            INSERT
            INTO
                Admin_Role (aname)
            VALUE (#{aname});
    </insert>

    <select id="selectAdmins" resultMap="AdminResultMap">
        SELECT
            *
        FROM
            Admin
    </select>

    <select id="selectAdminById" parameterType="Long" resultMap="AdminResultMap">
            SELECT
                *
            FROM
                Admin
            WHERE
                aid = #{aid}
    </select>

    <update id="updatePasswordById">
            UPDATE
                Admin
            SET
                password = #{password}
            WHERE
                aid = #{aid}
    </update>

    <update id="updateAuthorityById">
            UPDATE
                Admin
            SET
                authority = #{authority}
            WHERE
                aid = #{aid}
    </update>

    <delete id="deleteAdminById" parameterType="Long">
        DELETE
        FROM
              Admin
        WHERE
              aid = #{aid}
    </delete>
</mapper>